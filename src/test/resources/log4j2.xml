<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <!-- Define a property for log file location -->
    <Properties>
        <Property name="logPath">C:\Users\Imranullah\IdeaProjects\SeleniumFundamentals\SeleniumFrameWorkDesign\logs</Property>
    </Properties>

    <Appenders>
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] %-5level %logger{1} - %msg%n"/>
        </Console>

        <!-- Rolling File Appender using the property -->
        <RollingFile name="RollingFile" fileName="${logPath}/automation.log"
                     filePattern="${logPath}/automation-%d{yyyy-MM-dd-HH-mm-ss}.log">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] %-5level %logger{1} - %msg%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Specific Logger for Rest Assured -->
        <Logger name="restassuredLogger" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Logger>

        <!-- Root Logger -->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Root>
    </Loggers>

</Configuration>
